<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_bar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:visibility="gone" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_note_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/text_space_top_bottom"
        android:layout_marginRight="@dimen/text_space_top_bottom"
        android:layout_marginTop="@dimen/text_space_top_bottom"
        android:background="@drawable/title_bg"
        app:layout_collapseMode="pin"
        app:logo="@drawable/ic_whatshot_24dp"
        app:title="@string/cai_pin" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_high"
        app:tabIndicatorColor="@color/text_color"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/text_color"
        app:tabTextColor="@color/item_main_bg_p"
        android:background="@drawable/main_menu_item_bg"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/show_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>